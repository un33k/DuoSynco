# DuoSynco Environment Configuration Template
# Copy this file to .env.local and fill in your actual values

# AssemblyAI Configuration
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# ElevenLabs Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Voice ID Mappings (replace with your cloned voice IDs)
VOICE_SPEAKER_A=your_voice_id_here
VOICE_SPEAKER_B=colleague_voice_id_here

# TTS Quality Settings
TTS_QUALITY=high
TTS_TIMING_MODE=adaptive
TTS_GAP_DURATION=0.4
TTS_MAX_WORKERS=1

# Processing Settings
OUTPUT_FORMAT=mp4
PROCESSING_QUALITY=medium
VERBOSE_LOGGING=true

# File Paths
DEFAULT_OUTPUT_DIR=./output
TEMP_DIR_CLEANUP=true

# Legacy DuoSynco Settings (for backward compatibility)
DUOSYNCO_QUALITY=medium
DUOSYNCO_FORMAT=mp4
DUOSYNCO_VERBOSE=false
DUOSYNCO_SAMPLE_RATE=44100
DUOSYNCO_CHANNELS=2
DUOSYNCO_THREADS=1
DUOSYNCO_MEMORY_MB=2048
DUOSYNCO_CLEANUP=true

# Development Settings
PYTHONPATH=.
PYTEST_ARGS=-v
BLACK_LINE_LENGTH=88